<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aman.againnavigation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_chooseReciverFragment"
            app:destination="@id/chooseReciverFragment" />
        <action
            android:id="@+id/action_homeFragment_to_viewBalanceFragment"
            app:destination="@id/viewBalanceFragment" />
        <action
            android:id="@+id/action_homeFragment_to_viewTransactionFragment"
            app:destination="@id/viewTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewBalanceFragment"
        android:name="com.aman.againnavigation.ViewBalanceFragment"
        android:label="fragment_view_balance"
        tools:layout="@layout/fragment_view_balance" />
    <fragment
        android:id="@+id/viewTransactionFragment"
        android:name="com.aman.againnavigation.ViewTransactionFragment"
        android:label="fragment_view_transaction"
        tools:layout="@layout/fragment_view_transaction" />
    <fragment
        android:id="@+id/chooseReciverFragment"
        android:name="com.aman.againnavigation.ChooseReciverFragment"
        android:label="fragment_choose_reciver"
        tools:layout="@layout/fragment_choose_reciver" >
        <action
            android:id="@+id/action_chooseReciverFragment_to_sendCashFragment"
            app:destination="@id/sendCashFragment" />
    </fragment>
    <fragment
        android:id="@+id/sendCashFragment"
        android:name="com.aman.againnavigation.SendCashFragment"
        android:label="send cash -{receivername}"
        tools:layout="@layout/fragment_send_cash">
        <argument
            android:name="receivername"
            app:argType="string" />
        <action
            android:id="@+id/action_sendCashFragment_to_dialogFragment2"
            app:destination="@id/dialogFragment2" />
        <action
            android:id="@+id/action_sendCashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="www.navigationcomponent.com{receivername}" />
    </fragment>
    <dialog
        android:id="@+id/dialogFragment2"
        android:name="com.aman.againnavigation.DialogFragment"
        android:label="fragment_dialog"
        tools:layout="@layout/fragment_dialog" >
        <argument
            android:name="receivername"
            app:argType="string" />
        <argument
            android:name="amout"
            app:argType="long" />
    </dialog>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.aman.againnavigation.SettingFragment"
        android:label="settings"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.aman.againnavigation.AboutAppFragment"
        android:label="fragment_about_app"
        tools:layout="@layout/fragment_about_app" />
    <action android:id="@+id/action_global_aboutAppFragment" app:destination="@id/aboutAppFragment" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.aman.againnavigation.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_notification" />
</navigation>